# Set default behavior for line endings
* text=lf

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.c text
*.cxx text
*.cpp text
*.h text
*.hpp text
*.am text
*.ac text
*.in text
*.m4 text
*.sh text
*.py text
*.pl text
*.md text
*.txt text
*.xml text
*.desktop text
*.po text
*.pot text

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf

# Declare files that will always have LF line endings on checkout
*.sh text eol=lf
configure text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.pdf binary
*.so binary
*.a binary
*.o binary
*.gmo binary

# Archive files
*.tar binary
*.gz binary
*.bz2 binary
*.xz binary
*.zip binary

# Meson build files
meson.build text
meson_options.txt text